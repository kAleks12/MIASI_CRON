# Task definitions
task {
    name: "example1"
    output: "./output.txt"
    cmds: ["echo hello from terminal"]
    files: ["./script.sh"]
    files: ["./main.py"]
}


task {
    name: "example2"
    output: "./output2.txt"
    cmds: ["echo example", "echo another example"]
}

# other task definitions ...


# Run configuration
run {
    repeat_once {
        tasks: ["example1"]
    }
    repeat_at {
            tasks: ["example1"]
            date: 20-03-2024
            time: 11:00:00
    }
    repeat_every {
        # possible values: [second, minute, hour, day, week, month]
        unit: minute
        value: 30
        tasks: ["example1"]
    }
    repeat_cron {
        cron: "0 0 * * *"
        tasks: ["example1"]
    }
}